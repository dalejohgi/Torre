{
  "name": "torre",
  "version": "1.0.0",
  "description": "App for Torre",
  "main": "./api/v1/app.js",
  "scripts": {
    "start:server": "nodemon ./api/v1/app.js",
    "start": "npm run build:frontend && node ./api/v1/app.js",
    "postinstall": "npm run build:frontend",
    "serve:frontend": "vue-cli-service serve --open ./frontend/src/main.js",
    "build:frontend": "vue-cli-service build --dest api/v1/frontend ./frontend/src/main.js",
    "lint:frontend": "vue-cli-service lint ./frontend/src/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dalejohgi/Torre.git"
  },
  "author": "David",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dalejohgi/Torre/issues"
  },
  "homepage": "https://github.com/dalejohgi/Torre#readme",
  "dependencies": {
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fetch": "^1.1.0",
    "node-fetch": "^2.6.1",
    "vue": "^2.6.11",
    "vue-router": "^3.4.9",
    "vuetify": "^2.2.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "devDependencies": {
    "nodemon": "^2.0.6",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  }
}
